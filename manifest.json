{
	"name": "Break Time",
	"version": "1.0",
	"description": "Need a break? Break Time helps time your breaks and alert you when they're over!",
//	"options_page": "options.html",
	"permissions": ["alarms", "notifications", "storage"],
	"background": {
		"scripts": ["background.js"],
		"persistent": false
	},
	"browser_action": {
		"default_title": "Break Time Event",
		"default_popup": "popup.html",
		"default_icon": {
			"16": "images/breaktime16.png",
     		"32": "images/breaktime32.png",
      		"48": "images/breaktime48.png",
      		"128": "images/breaktime128.png"
      }
	},
	"icons": {
      "16": "images/breaktime16.png",
      "32": "images/breaktime32.png",
      "48": "images/breaktime48.png",
      "128": "images/breaktime128.png"
    },
	"manifest_version": 2
}
